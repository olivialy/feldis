.cta
    display: inline-block
    padding: 1em 2em
    border: none
    background-color: $colour.default
    color: white
    font-size: 1.07em
    font-weight: bold
    line-height: 1
    text-decoration: none
    transition: background-color .2s, color .2s

    svg
        fill: currentColor
        vertical-align: middle
        margin: 0 .5em

    &:hover
        color: $colour.default
        background-color: $colour.crystal
