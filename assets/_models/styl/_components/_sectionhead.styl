.sectionhead
    display: flex
    width: 100%
    height: 100%
    text-align: center
    align-items: center

    &-content
        h1
            line-height: 1

            span
                font-weight: normal

    &-subheading
        padding-top: 1em
        font-size: _px2em(16px)
        font-weight: normal
        line-height: 1.2
        text-transform: none

    &-black
        background-color: rgba($colour.default, .4)
        color: white

    &-white
        background-color: rgba(white, .4)
        color: black

