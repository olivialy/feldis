input[type=text]
input[type=email]
select
label
::placeholder
    color: $colour.default
    font-size: 1.14em
    font-weight: bold
    text-transform: uppercase

input[type=text]
input[type=email]
select
textarea
    width: 100%
    min-height: 2em
    padding: .3em .75em
    border: none

    &::placeholder
        color: $colour.default

    &:focus
        background-color: rgba($colour.crystal, 1)
        color: $colour.darkgrey
        outline: none

input[type=text]
input[type=email]
    border-bottom: 6px solid $colour.default
    background-color: rgba($colour.crystal, 0)
    transition background-color .2s, color .2s

input[type="button"]
input[type="submit"]
    cursor: pointer

select
    padding: .3em 2.5em .3em .75em
    border-radius: 0
    appearance: none // remove border-radius on select field
    background-position: calc(100% - .75em) 80%
    background-repeat: no-repeat
    background-image url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"20\" height=\"20\" fill=\"#000\"><polygon points=\"0, 0 20, 0 10, 10\" /></svg>')

fieldset
    position: relative
    top: -.5em
    margin: 0
    padding: 0
    border: none

    > p
        padding-bottom: 0

