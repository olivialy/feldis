.circle
    position: relative
    display: flex
    width: 196px
    height: @width
    max-width: 100%
    max-height: 100%
    margin: 0 auto
    padding-right: 1em
    flex-direction: column
    align-items: center
    justify-content: center
    background: url(../img/circle.png) no-repeat center
    background-size: contain
    transition: opacity .2s

    &-small
        width: 160px
        height: 160px

    &-large
        width: 240px
        height: 240px

    &-colors
        background-image: url(../img/circle-colors.png)
        color: $colour.default
        font-size: _px2em(12x)
        font-weight: bold
        line-height: 1
        text-decoration: none
        text-transform: uppercase

        svg
            fill: $colour.pink
            transition: fill .2s

        &:hover
            color: white
            background-image: url(../img/circle-colors-hover.png)
            //background-color: rgba($colour.yellow, 1)

            svg
                fill: white
