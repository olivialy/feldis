.sectionhead
    display: flex
    width: 100%
    min-height: 200px;
    padding: 1.5em 0
    background-color: rgba(white, .6)
    text-align: center
    align-items: center

    &-subheading
        font-size: 1em
        font-weight: normal
        text-transform: none

        &-bigger
            font-size: _px2em(20px)

        &-skill
            width: 300px
            margin: 0 auto

    // titles styles
    &-title
        color: $colour.pink
        font-size: _px2em(25px)
        line-height: 1
        text-transform: uppercase

        span
            display: block
            color: $colour.default
            font-weight: normal
            text-transform: none

    &-skilltitle
        margin-bottom: 0
        font-size: _px2em(35px)
        text-transform: uppercase

    &-strongtitle
        color: $colour.pink
        font-size: _px2em(35px)
        font-weight: normal
        line-height: 1
        text-transform: none

        span
            display: block
            color: $colour.default
            font-size: 1.2em
            font-weight: bold
            text-transform: none

    &-worktitle
        font-size: _px2em(32px)
        text-transform: uppercase

        &:after
            content: ''
            display: block
            width: 5.5em
            margin: .75em auto 0
            border-bottom: 6px solid

    // icon
    &-icon
        position: relative
        display: block
        width: 175px
        height: 75px
        margin: 0 auto

        span
            position: absolute
            top: 50%
            left: 50%
            padding: 0 1em
            background-color: $colour.pink
            transform: translate(-50%, -50%)

        &:before
            content: ''
            display: block
            position: absolute
            top: calc(50% - 2px)
            right: 0
            left: 0
            border-top: 4px solid white

    // backgrounds
    &-pink
        background-color: $colour.pink

        *
            color: white
