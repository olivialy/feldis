.sectionhead
    display: flex
    width: 100%
    height: 100%
    background-color: rgba(white, .6)
    text-align: center
    align-items: center

    &-title
        color: $colour.pink
        font-size: _px2em(25px)
        line-height: 1
        text-transform: uppercase

        span
            display: block
            color: $colour.default
            font-weight: normal
            text-transform: none

    &-strongtitle
        color: $colour.pink
        font-size: _px2em(35px)
        font-weight: normal
        line-height: 1
        text-transform: none

        span
            display: block
            color: $colour.default
            font-size: 1.2em
            font-weight: bold
            text-transform: none

    &-subheading
        font-weight: normal
        text-transform: none
