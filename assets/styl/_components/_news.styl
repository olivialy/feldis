.news
    list-style: none

    a
        color: $colour.default
        text-decoration: none

    h2
        padding: .5em 0 .75em
        color: $colour.pink
        font-size: _px2em(10px)

    img
        border-top: 3px solid $colour.pink

    p
        font-size: _px2em(12px)
        font-weight: bold

    &-item
        padding-bottom: 2em

        &[data-index]
            display: none

        &-preview
            position: relative

            &:after
                content: ''
                display: block
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 100%
                background-color: rgba($colour.pink, .5)
                opacity: 0
                transition: opacity .2s

    a:hover &-item-preview
            &:after
                opacity: 1

    @media $screen.md
        h2
            font-size: _px2em(12px)

        img
            border-top: 8px solid $colour.pink

        p
            font-size: _px2em(15px)

        &-item
            padding-bottom: 3em
