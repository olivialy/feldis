.cards
    display: flex
    flex-direction: column

    &-item
        position: relative
        display: flex
        align-items: strech
        width: 100%
        color: $colour.default
        font-size: _px2em(12px)
        line-height: 1.2

        &:before
            position: absolute
            z-index: 2
            top: 50%
            left: 50%
            content: ''
            display: block
            width: 0
            height: 0
            border: 30px solid transparent
            border-left-color: white
            transform: translateY(-50%)

        &:nth-child(even) &-content
            order: 2

        &:nth-child(even):before
            transform: translate(-100%, -50%) rotate(180deg)

        &-content
        &-img
        img
            width: 50%

        &-content
            display: flex
            flex-direction: column
            justify-content: space-between
            background-color: white

            dl
                width: 100%
                height: 160px // needed to ensure that all cards have the same height
                padding: 1em 1em 0

            dt
                font-wiehgt: bold
                text-transform: uppercase

            dd
                padding-bottom: 1em

        &-img
            position: relative
            overflow: hidden

            img
                position: absolute
                top: 50%
                left: 50%
                min-width: 100%
                min-height: @min-width
                max-width: none
                width: auto
                height: @width
                transform: translate(-50%, -50%)
