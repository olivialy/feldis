.work
    position: relative
    display: block

    &:before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: white
        opacity: 0

    &-content
        position: absolute
        top: 50%
        left: 50%
        width: auto
        width: fit-content
        padding: 1em
        border: 4px solid white
        background-color: $colour.pink
        color: white
        text-decoration: none
        text-transform: uppercase
        opacity: 0
        transform: translate(-50%, -50%)
        transition: opacity .2s

    &:hover &-content
        opacity: 1

    &:hover:before
        opacity: .5
