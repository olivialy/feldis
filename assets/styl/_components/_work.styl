.work
    position: relative
    display: block
    text-decoration: none

    img
        margin: 0 auto
        width: 100%

    p
        padding-top: 1em
        font-size: _px2em(15px)

    &:before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: white
        opacity: 0

    &-content
    &-icon
        position: absolute
        top: 50%
        left: 50%
        width: auto
        width: fit-content
        color: $colour.default
        transform: translate(-50%, -80%)
        transition: opacity .2s

    &-content
        padding: 1em
        border: 4px solid white
        background-color: $colour.pink
        color: white
        text-decoration: none
        text-transform: uppercase
        transform: translate(-50%, -50%)

    &-icon
        opacity: 0

    @media $screen.sm
        padding-bottom: 2em

        p
            text-align: center

    @media $screen.md
        &:before
        &-content
            opacity: 0

        &:hover &-content
        &:hover &-icon
            opacity: 1

        &:hover:before
            opacity: .5
