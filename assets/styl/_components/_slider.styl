.slider
    position: relative
    padding-bottom: 50px

    button
        position: absolute
        bottom: 0
        border: none
        background: none
        outline: none

        &[disabled]
            opacity: .5

        &:hover:not([disabled])
            color: $colour.default
            cursor: pointer

    &-previous
        transform: rotate(180deg)
        left: 0

    &-next
        right: 0

    [data-slide-index]:not([data-slide-index="1"])
        display: none

    &-container
        position: relative
        height: 292px
        overflow: hidden

    &-item
        position: absolute
        top: 50%
        transform: translateY(-50%)

    @media $screen.md
        button
            top: calc(50% - 25px)
            bottom: auto

        &-previous
            left: 13%
            transform: translate(-100%, -50%) rotate(180deg)

        &-next
            right: 13%
            transform: translate(100%, -50%)

        &-container
            width: 70%
            margin: 0 auto
