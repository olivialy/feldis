.overlay
    position: relative
    display: block

    &:before
        content: ''
        display: block
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(black, .6)


    &-content
        position: absolute
        z-index: 2
        top: 50%
        left: 50%
        color: white
        transform: translate(-50%, -50%)


