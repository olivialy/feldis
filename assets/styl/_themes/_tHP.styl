.tHP
    // top section
    &-skills
    &-certification
    &-environment
        padding: 1.5em 1em
        background-repeat: no-repeat
        background-position: center
        background-size: cover
        line-height: 1.3

        h2
            padding-bottom: .1em
            text-transform: uppercase
            line-height: 1

        p
            padding-bottom: 1em

    &-skills
        position: relative

        h2
            color: $colour.pink
            font-size: 24px
            font-weight: normal

            span
                display: block
                color: $colour.default
                font-size: 27px
                font-weight: bold
                text-transform: none

    &-certification
    &-environment
        h2
            font-size: _px2em(20px)

    &-certification
        color: white


    for bg in skills certification environment
        &-{bg}
            background-image: "url(../img/bg-hp-%s.jpg)" % bg


    @media $screen.lg
        &-skills
            h2
                font-size: 35px

                span
                    font-size: 42px

            .cta
                position: absolute
                bottom: 1.5em


    // sectors section
    &-sectors
        h2
            display: inline-block
            font-size: _px2em(35x)
            font-weight: normal
            text-transform: uppercase

        p
            margin-right: auto
            margin-left: auto
            line-height: 1.2

            &:after
                content: ''
                display: block
                width: 90%
                max-width: 490px
                margin: 1em auto
                border-top: 3px solid $colour.default

    // latest works & news section
    &-latest
        padding-top: 2em
        padding-bottom: 4em
        color: white

        a
            color: white
            font-size: _px2em(12px)
            text-transform: uppercase

            &:hover
                text-decoration: none

        h2
        > div p
            padding-right: 1rem
            padding-left: 1rem
            line-height: 1.2
            text-align: center

        h2
            font-size: _px2em(35px)
            text-transform: uppercase
