.rHeader
    position: relative
    padding-top: 2em

    &-brand
        width: 100%
        padding-bottom: 1em
        text-align: center

        a
            display: inline-block

    &-triggermenu
        {topRightButton}

    &-nav
        width: 100%
        text-align: center

        &-close
            {topRightButton}

    @media $screen.sm
        &-nav
            position: fixed
            top: 0
            left: 0
            height: 100%
            display: flex
            flex-direction: column
            justify-content: center
            background-color: white
            transition: transform .4s
            transform: translateY(-200%)

            &-open
                transform: translateY(0)

    @media $screen.md
        &-nav
            position: static
            height: auto

        &-nav-aside
            position: absolute
            top: 0
            right: 0

        button
            display: none
